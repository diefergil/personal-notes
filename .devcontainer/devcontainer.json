// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/docker-existing-dockerfile
{
	"name": "personal-notes-devcontainer",
	"build": {
		// Sets the run context to the .devcontainer folder.
		"context": "..",
		// Update the 'dockerFile' property if you aren't using the standard 'Dockerfile' filename.
		"dockerfile": "../Dockerfile",
		"args": {
			// Workaround for new Docker version bug: https://github.com/microsoft/vscode-remote-release/issues/7958#issuecomme../nt-1416777679
			"BUILDKIT_INLINE_CACHE": "0"
		}
	},
	"features": {
		"ghcr.io/devcontainers/features/python:1": {
			"installTools": true,
			"optimize": true,
			"version": "3.11"
		}
	},

	// Creates a file in .devcontainer directory containing the host docker group GID.
	// This is required to use docker with a non-root user inside the container.
	"initializeCommand": ".devcontainer/scripts/initialize.sh",

	// Actions to run after the container creation
	"postCreateCommand": "post-create.sh",

	// Configure tool-specific properties.
	"customizations": {
		// Configure properties specific to VS Code.
		"vscode": {
			// Add the IDs of extensions you want installed when the container is created.
			"extensions": [
				"ms-python.python",
				"ms-python.vscode-pylance",
				"ms-vsliveshare.vsliveshare",
				"ms-azuretools.vscode-docker",
				"GitHub.vscode-pull-request-github"
			]
		}
	},

	// Forward jupyter lab/notebook port
	"forwardPorts": [
		8000
	]
}
